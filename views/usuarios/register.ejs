<% layout('layouts/boilerplate') %>
    <div class="row">
        <form action="/registrar" method="POST"
            class="validated-form col-md-4 offset-md-4 d-flex flex-column justify-content-center text-center"
            novalidate>
            <h1>Novo Usuario</h1>
            <div class="mb-3">
                <input class="form-control rounded-pill px-4" placeholder="Usuario" type="text" id="username"
                    name="username" required>
                <div class="valid-feedback">
                    Ok!
                </div>
            </div>
            <div class="mb-3">
                <input class="form-control rounded-pill px-4" placeholder="Email" type="email" id="email" name="email"
                    required>
            </div>
            <div class="mb-3">
                <input class=" form-control rounded-pill px-4" placeholder="Senha" type="password" id="password"
                    name="password" required>
            </div>
            <button class="btn btn-success rounded-pill">Registrar</button>
        </form>
    </div>